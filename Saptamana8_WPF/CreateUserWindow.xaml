<Window x:Class="Saptamana8_WPF.CreateUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Saptamana8_WPF"
        mc:Ignorable="d"
        Title="CreateUserWindow" Height="400" Width="698">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Name:" HorizontalAlignment="Right" Margin="10" VerticalAlignment="Bottom"/>
        <TextBox Grid.Column="1" x:Name="usernameBox" HorizontalAlignment="Left" Margin="10" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="120"/>

        <Label Content="Password:" HorizontalAlignment="Right" Margin="10" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBox Grid.Column="1" x:Name="passwordBox" HorizontalAlignment="Left" Margin="10" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" Width="120"/>

        <Button Grid.Column="1" Content="Create account" HorizontalAlignment="Left" Margin="10" Grid.Row="2" VerticalAlignment="Top" Height="30" Width="95" Click="CreateAccountButton_Click"/>


    </Grid>
</Window>
