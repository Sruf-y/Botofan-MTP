<Window x:Class="Saptamana8_WPF.CreateUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Saptamana8_WPF"
        mc:Ignorable="d"
        Title="Sign in" Height="300" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="2" Grid.Row="0" />
        
        
        <Label Content="Name:" FontSize="14" Height="Auto" HorizontalAlignment="Right" Margin="0,0,0,10" VerticalAlignment="Bottom" />
        <TextBox Grid.Column="1" FontSize="14" x:Name="usernameBox" HorizontalAlignment="Center" Margin="0,0,0,10" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="120" Height="25" Padding="0,2,0,2"/>

        <Label Content="Password:" FontSize="14" HorizontalAlignment="Right" Margin="0,10,0,10" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBox Grid.Column="1" FontSize="14" x:Name="passwordBox" HorizontalAlignment="Center" Margin="10" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" Padding="0,2,0,2"/>

        <Button Grid.Column="1" FontSize="14" Content="Create account" HorizontalAlignment="Center" Margin="10" Padding="5,3,5,3" Grid.Row="2" VerticalAlignment="Top" Height="25" Click="CreateAccountButton_Click"/>


    </Grid>
</Window>
